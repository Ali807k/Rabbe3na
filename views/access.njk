{% extends "layout.njk" %}
{% block header %}
    <link rel="stylesheet" href="./styles/access.css">
    <link rel="icon" type="x-icon" href="./assets/diamond-solid.svg">
    <script defer src="./scripts/access.js"></script>
    <title>Log in</title>
{% endblock %}
{% block main %}
    <div class="container" id="container">
        <div class="form-container sign-up">
            <form id="sign-up-form" method="get">
                <h1>Create Account</h1>
                <input id="username" type="username" placeholder="Username" required>
                <input id="email" type="email" placeholder="Email" required >
                <input id="password" type="password" placeholder="Password">
                <div id="error"></div>
                <input id="confirm-password" type="password" placeholder="Confirm Password">
                <button type="submit">Sign Up</button>
            </form>
        </div>
        <div class="form-container sign-in">
            <form id="sign-in-form">
                <h1>Sign In</h1>
                <input id="emailLogIn" type="email" placeholder="Email" required>
                <input id="passwordLogIn" type="password" placeholder="Password" required>
                <a href="/forgot-password">Forget Your Password?</a>
                <button type="submit">Sign In</button>
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Hello, Friend!</h1>
                    <p>Register to have fun using all the website features</p>
                    <p>Already have an account?</p>
                    <button class="hidden" id="login">Sign In</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1>Welcome Back!</h1>
                    <p>Register with your personal details to use all of site features</p>
                    <p>Don't have an account?</p>
                    <button class="hidden" id="register">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}